<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/primary_attack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/level_1_primary_attack"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/secondary_attack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/level_1_secondary_attack"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/third_attack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/level_1_third_attack"
            android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>